extends ./base

block styles
  link(rel='stylesheet', href='style/signup.css')

block content
  video.bgvid(autoplay, loop)
    source(src="images/Coverr-lamp.webm" type="video/webm")
    source(src="images/Coverr-lamp.mp4" type="video/mp4")

  div.signup-container
    h1.title Welcome to masterfully.
    div.signup-form
      form(method='POST', action='/api/users')
        div.signup-form-input.firstname
          input(type='text', name='firstname', placeholder="First Name" required)
        div.signup-form-input.lastname
          input(type='text', name='lastname', placeholder="Last Name" required)
        div.signup-form-input.email
          input(type='email', name='email', placeholder="Email" required)
        div.signup-form-input.password
          input(type='password', name='password', placeholder="Password" required)
        button.signup-button Sign up

    div.login-link-container
      a.login-link(href='/login') Cancel